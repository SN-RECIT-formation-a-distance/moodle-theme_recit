{{!
    Page header.
}}
<header id="page-header" >
    <div>
        <div id="course-banner">
            <div>
                <div class="d-flex">
                    <div class="mr-auto">
                        {{{contextheader}}}
                    </div>
                </div>
            </div>
        </div>     
        {{#enablebreadcrumb}}   
            {{{navbar}}}
        {{/enablebreadcrumb}}
        
        {{#headeractions}}
            <div class="" data-region="header-actions-container" style="height: 40px;">
                <div class="header-action ml-2">{{{.}}}</div>
            </div>
        {{/headeractions}}

        {{#showpageheadingbutton}}   
        <div class="m-1 p-1 d-flex justify-content-end">
            {{{pageheadingbutton}}}
        </div>
        {{/showpageheadingbutton}}   
    </div>
</header>