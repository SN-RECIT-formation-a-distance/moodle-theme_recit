<a href="{{courselink}}">
    {{{courseimage}}}
</a>
{{#hascontacts}}
<div class="course-contacts">
    {{#coursecontacts}}
        <a href="{{url}}" class="contact" data-toggle="tooltip" title="{{name}}">
            <img src="{{picture}}" class="rounded-circle" alt="{{name}}">
        </a>
    {{/coursecontacts}}
    {{#coursecontactsnum}}
        <span class='badge badge-warning p-2'>+{{coursecontactsnum}}</span>
    {{/coursecontactsnum}}
</div>
{{/hascontacts}}

<div class="card-body">
    <h4 class="card-title">
    <a class="" href="{{courselink}}">{{{coursename}}}</a>
    {{#fullcoursesummaryhtml}}<a class="" href="#" data-toggle="modal" data-target="#modalcourse{{courseid}}"><i class="fa fa-info-circle" aria-hidden="true"></i></a>{{/fullcoursesummaryhtml}}</h4>
    <div class="no-overflow">
        <div class="p-3 text-right">
        {{#badges}}
            <a href="{{courselink}}" class="contact" data-toggle="tooltip" title="{{name}}">
                {{{image}}}
            </a>
        {{/badges}}
        </div>
    </div>
    <div class="courseinfo">
        {{#tags}}
            <a href='{{url}}'><span class='badge badge-info'>{{name}}</span></a>
        {{/tags}}
        {{#courseicons}}
            {{{.}}}
        {{/courseicons}}
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="modalcourse{{courseid}}" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">{{{coursename}}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {{{fullcoursesummaryhtml}}}
      </div>
    </div>
  </div>
</div>
