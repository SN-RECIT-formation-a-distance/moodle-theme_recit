<div id="page-content">
    {{#hasblocksembed}}
        <div class="col-lg-3 col-md-3 col-sm-12">
            {{{ sidepreblocks }}}
        </div>
    {{/hasblocksembed}}
    
    <div id="region-main-box" class="{{^hasblocksembed}}col-12{{/hasblocksembed}} {{#hasblocksembed}}col-md-9{{/hasblocksembed}}">
        {{#hasregionmainsettingsmenu}}
            <div id="region-main-settings-menu" class="d-print-none {{#hasblocks}}has-blocks{{/hasblocks}}">
                <div> {{{ output.region_main_settings_menu }}} </div>
            </div>
        {{/hasregionmainsettingsmenu}}
        {{#hastopblocks}}
            <section data-region="blocks-row" class="d-print-none hidden-print">
                {{{ sidetopblocks }}}
            </section>
        {{/hastopblocks}}
        <section id="region-main">
            <div class="card">
                <div class="card-body">             
                    {{#headercontent}}
                        {{> core/activity_header }}
                    {{/headercontent}}
                    {{{ output.main_content }}}
                    {{#show_activity_nav}}
                        {{{ output.activity_navigation }}}
                    {{/show_activity_nav}}
                    {{{ output.course_content_footer }}}
                </div>
            </div>
        </section>
    </div>
</div>
      