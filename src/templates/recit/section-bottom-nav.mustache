{{#layoutOptions.showSectionBottomNav}} 
    {{#section_bottom_nav.enable}}   
            <nav id='sectionPagination' aria-label='Pagination de sections'>
                <ul >
                    <li >
                        <a class='page-link' href='#' tabindex='-1'>
                            <i class='fa fa-arrow-left'></i> 
                            {{section_bottom_nav.prev_section}}   
                        </a>
                    </li>
                    <li >
                        <a class='page-link' href='#' tabindex='-1'>
                            {{section_bottom_nav.next_section}}
                            <i class='fa fa-arrow-right'></i>
                        </a>
                    </li>
                </ul>
            </nav>
    {{/section_bottom_nav.enable}}
{{/layoutOptions.showSectionBottomNav}}