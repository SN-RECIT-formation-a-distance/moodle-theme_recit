<div class="modal" tabindex="-1" id="recit-modal-timeout">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">{{#str}} timeout, theme_recit2 {{/str}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>{{#str}} msgtimeout, theme_recit2 {{/str}}</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">{{#str}} close, theme_recit2 {{/str}}</button>
      </div>
    </div>
  </div>
</div>