<div class='row course-card m-2'>
    <div class='col-lg-4 col-xl-3 col-md-5 col-12 pl-md-0 courseimg'>
    <a href="{{courselink}}">
        {{{courseimage}}}
    </a>
    </div>

    <div class="col-lg-8 col-xl-9 col-md-7 col-12 coursedesc">
        <div class='row'>
            <div class='col-md-9'>
                <div class="coursetitle"><a class="h4" href="{{courselink}}">{{{coursename}}}</a> {{{icons}}}</div>
            </div>
        </div>
        <div class='row'>
            <div class='col-lg-9'>
                <div class="summary">
                    <div class="collapse show coursesummary{{courseid}}">{{{coursesummary}}} {{#haselipsis}}... <button type="button" class="btn btn-link p-0" data-toggle="collapse" data-target=".coursesummary{{{courseid}}}">Plus</button>{{/haselipsis}}</div>
                    <div class="collapse coursesummary{{courseid}}">{{{fullcoursesummary}}} {{#haselipsis}} <button type="button" class="btn btn-link p-0" data-toggle="collapse" data-target=".coursesummary{{{courseid}}}">Moins</button>{{/haselipsis}}</div>
                </div>
               {{#hascontacts}} <p>
                    <span class="instructors"> {{#coursecontacts}}
                        <a href="{{url}}" class="" data-toggle="tooltip" title="{{name}}">
                            <img src="{{{picture}}}"/>
                        </a>
                    {{/coursecontacts}}
                    {{#coursecontactsnum}}
                        <span class='badge badge-warning p-2'>+{{coursecontactsnum}}</span>
                    {{/coursecontactsnum}}
                    </span>
                </p>{{/hascontacts}}
            </div>
            <div class='col-lg-3'>
            <p>{{#hastags}}Tags:{{/hastags}}
                {{#tags}}
                    <a href='{{url}}'><span class='badge badge-info'>{{name}}</span></a>
                {{/tags}}</p>
                <div class="">
                {{#badges}}
                    <a href="{{courselink}}" class="badge" data-toggle="tooltip" title="{{name}}">
                        {{{image}}}
                    </a>
                {{/badges}}
                </div>
            </div>
        </div>


    </div>
</div>
