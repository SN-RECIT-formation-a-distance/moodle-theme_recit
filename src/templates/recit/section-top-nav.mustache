{{#section_top_nav}}   
    {{#section_top_nav.isMenuM1}}
        <div class="navsections">
            <nav class='menuM1' id='nav-sections' data-status='close'>                    
                <div class='background-menu-mobile'></div>
                <ul class='menu-level1'>
                    <li class='btn-menu-responsive'>
                        <button class='btn btn-outline-light btn-sm' data-btn='open'
                            onclick='M.recit.theme.recit2.Ctrl.instance.sectionsNav.menu.ctrlOpeningResponsive(event)'><i class='fa fa-bars'></i>
                        </button>
                        <div class='section-title'></div>
                        <div class='sous-section-title'></div>
                        <button class='btn btn-outline-light btn-sm' data-btn='close'
                            onclick='M.recit.theme.recit2.Ctrl.instance.sectionsNav.menu.ctrlOpeningResponsive(event)'><i class='fa fa-times'></i>
                        </button>
                    </li>

                    {{#section_top_nav.sections}}
                        <li class='menu-item' data-submenu='0'>
                            <div class='menu-item-title'>
                                <div class='arrow'></div>
                                <a class='menu-item-desc' href='{{url}}' title='{{title}}'>{{{desc}}}</a>
                                {{#hasSubSections}}
                                    <button class='btn btn-sm btn-outline-light btn-expand-sub-menu' 
                                        onclick="M.recit.theme.recit2.Ctrl.instance.sectionsNav.menu.ctrlOpeningSubMenuResponsive(event, '{{sectionId}}')"><i class='fa fa-plus'></i></button>
                                {{/hasSubSections}}
                            </div>
                            {{#hasSubSections}}
                                <ul class="menu-level2" data-parent-section='{{sectionId}}' data-status='closed'>
                                {{#subSections}}
                                    <li class='menu-item' data-submenu='1'>
                                        <div class='menu-item-title'>
                                            <div class='arrow'></div>
                                            <a class='menu-item-desc' href='{{url}}' title='{{title}}'>{{{desc}}}</a>
                                        </div>
                                    </li>
                                    <li></li>    
                                {{/subSections}}
                                </ul>
                            {{/hasSubSections}}
                        </li>
                        <li></li>
                    {{/section_top_nav.sections}}
                </ul>
            </nav>
        </div>
    {{/section_top_nav.isMenuM1}}

    {{#section_top_nav.isMenuM2}}
        <div class="navsections vertical">
            {{>theme_recit2/recit/section-menu-m5}}
        </div>
    {{/section_top_nav.isMenuM2}}

    {{#section_top_nav.isMenuM3}}
        <div class="navsections vertical">
            {{>theme_recit2/recit/section-menu-m5}}
        </div>
    {{/section_top_nav.isMenuM3}}

    {{#section_top_nav.isMenuM5}}
        <div class="navsections horizontal">
            {{>theme_recit2/recit/section-menu-m5}}
        </div>
    {{/section_top_nav.isMenuM5}}
{{/section_top_nav}}